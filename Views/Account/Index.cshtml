@{
    Layout = null; // No layout for this view
}

<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');
    </style>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Products-StyleSphere</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
    <!--Preloader-->
    <div id="preloader">
        <!--<div class="tear-text" data-text="Loading...">Loading...</div>-->
    </div>


    <div class="header" id="cart-header">
        <div class="container">
            <div class="navbar">
                <nav class="nav-link">
                    <ul id="menu-items">
                        <li><a href="Home">Home</a></li>
                        <li><a href="Products">Products</a></li>
                        <li><a href="About">About</a></li>
                        <li><a href="Contact">Contact</a></li>
                        <li><a href="#">Account</a></li>
                    </ul>
                </nav>
                <a href="Cart"><img src="../images/cart.png" width="30px" height="30px" class="cart" /></a>
                <img src="~/images/menu.png" class="menu-icon" onclick="menuToggle()" />
            </div>
        </div>
    </div>

 @* Account page *@
    
    <div class="account-page">
        <div class="container">
            <div class="row">
                <div class="col-2">
                    <img src="~/images/base.png"/>
                </div>

                <div class="col-2">
                    <div class="form-container">
                        <div class="form-btn">
                            <span id="loginTab">Login</span>
                            <span id="regTab">Register</span>
                            <hr id="indicator"/>
                        </div>
                        <div id="loginFormContainer">
                            <form id="loginForm">
                                <label for="loginUsername">Username</label>
                                <input type="text" id="loginUsername" name="loginUsername" />
                                <label for="loginPassword">Password</label>
                                <input type="password" id="loginPassword" name="loginPassword"  />
                                <button type="submit" class="btn">Login</button>
                                <a href="">Forgot Password</a>
                            </form>
                        </div>
                        

                        <div id="regFormContainer">
                            <form id="regForm">
                                <label for="regUsername">Username</label>
                                <input type="text" id="regUsername" name="regUsername"/>
                                <label for="regEmail">Email</label>
                                <input type="email" id="regEmail" name="regEmail"/>
                                <label for="regPassword">Password</label>
                                <input type="password" id="regPassword" name="regPassword"/>
                                <button type="submit" class="btn">Login</button>
                            </form>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--Footer-->
    <div class="footer" id="footer-id">
        <div class="small-container">
            <div class="row">
                <div class="col-3">
                    <h3>Made with care and love...</h3>
                    <p>Eco-wears and sports-fit in a line of handcrafted clothing made from eco-friendly materials with a foucs of sustainability and responsible production.</p>
                </div>
                <div class="col-3">
                    <img src="../images/brandlogo.png" />
                </div>
            </div>
        </div>
        <hr />
        <p class="copyright">Copyright 2025 - SytleSphere</p>
    </div>

    
    <script>
        //Form Validation

        document.addEventListener("DOMContentLoaded", function () {
            const loginTab = document.getElementById("loginTab");
            const regTab = document.getElementById("regTab");
            const loginForm = document.getElementById("loginFormContainer");
            const regForm = document.getElementById("regFormContainer");
            const indicator = document.getElementById("indicator");

            //Default
            loginForm.style.display="block";
            regForm.style.display = "none";

            //click regForm
            regTab.addEventListener("click", () => {
                indicator.style.transform = "translateX(100px)";
                loginForm.style.display = "none";
                regForm.style.display = "block";
            });

            //click loginForm
            loginTab.addEventListener("click", () => {
                indicator.style.transform = "translateX(0px)";
                loginForm.style.display = "block";
                regForm.style.display = "none";
            });

            const switchToLogin = document.getElementById("switchToLogin");
            if (switchToLogin) {
                switchToLogin.addEventListener("click", () => {
                    indicator.style.transform = "translateX(0px)";
                    regForm.classList.add("hide");
                    loginForm.classList.remove("hide");
                });
            }

        })

        document.getElementById('loginForm').addEventListener('submit', function (event) {
            event.preventDefault(); //Prevent default form submission
            const username = document.getElementById('loginUsername').value;
            const password = document.getElementById('loginPassword');

            if (username == "test" && password.value == "password") {
                alert('Login successful');
            } else {
                alert('Invalid username or password');
                password.value = "";
            }
        });


        document.getElementById('regForm').addEventListener('submit', function (event) {
            event.preventDefault();
            const username = document.getElementById('regUsername').value;
            const email = document.getElementById('regEmail').value;
            const password = document.getElementById('regPassword');

            if (username && email && password.value) {
                alert('Registration successfull!');
            } else {
                alert("Please fill all the required fields");
                password.value = "";
            }
        });


    </script>


    <script src="~/js/site.js"></script>

</body>
</html>
