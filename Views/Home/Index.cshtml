    <script>
        let typingHeading = document.getElementById("typewriter");
        sessionStorage.setItem("subscribeShown" , false);

        window.addEventListener("load", function () {

            //Typewriter
            setTimeout(() => {
                const fullText = "Shop with Us!\nOn StyleSphere";
                const typingSpeed = 60;
                let i = 0;
                let isDeleting = false;

                function typeWriter() {

                    typingHeading.textContent = fullText.substring(0, i);

                    if (!isDeleting) {
                        if (i < fullText.length) {
                            i++;
                            setTimeout(typeWriter, typingSpeed);
                        } else {
                            isDeleting = true;
                            setTimeout(typeWriter, 1500);
                        }
                    } else {
                        if (i > 0) {
                            i--;
                            setTimeout(typeWriter, typingSpeed);
                        } else {
                            isDeleting = false;
                            setTimeout(typeWriter, 1000);
                        }
                    }
                }

                typeWriter();
            }, 2000);
        });

        
        //Subscribe Modal for newsletters

        function showModal() {
            document.getElementById("subscribeModal").style.display = "flex";
            sessionStorage.setItem("subscribeShown", true);
        }

        function closeModal() {
            document.getElementById("subscribeModal").style.display = "none";
            sessionStorage.setItem("subscribeShown", true);
        }

        function submitForm() {
            const name = document.getElementById("firstName").value;
            const email = document.getElementById("email").value;

            if (name && email) {
                sessionStorage.setItem("subscriber name", name);
                sessionStorage.setItem("susbcriber email", email);
                alert("Thank you for submitting the form");
                closeModal();
            } else {
                alert("Please fill in both the fields.");
            }

        }

        window.addEventListener("scroll", () => {
            const shown = sessionStorage.getItem("subscribeShown");
            if (shown == 'false' && window.scrollY > 1000) {
                showModal();
            }
        });


    </script>

