@model List<StyleSphere.Models.ProductEntity.Product>

@{
    ViewData["Title"] = "Cart";
    Layout = "_Layout";
}

<div class="small-container" id="cart-page">
    <table>
        <tr>
            <th>Product</th>
            @* <th>Quantity</th> *@
            <th>Subtotal</th>
        </tr>

        @if (Model != null && Model.Any(p => p.isAddedToCart))
        {
            decimal total = 0;

            foreach (var item in Model.Where(p => p.isAddedToCart))
            {

                var subtotal = item.price;
                total += subtotal;
                <tr>
                    <td>
                        <div class="cart-info">
                            <img src="@item.buyimage" />
                            <div>
                                <p>@item.name</p>
                                <small>Price: ₹@item.price.00</small><br />
                                <a asp-controller="Products" asp-action="RemoveFromCart" asp-route-id="@item.id">Remove</a>
                            </div>
                        </div>
                    </td>
                
                    <td>₹@subtotal.00</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td style="justify-content:center;">Your cart is empty.</td>
            </tr>
        }
    </table>

    @if (Model != null && Model.Any(p => p.isAddedToCart))
    {
        decimal total = Model.Where(p => p.isAddedToCart).Sum(p => p.price);
        decimal tax = total * 0.4M;
        decimal grandTotal = total + tax;

        <div class="total-price">
            <table>
                <tr>
                    <td>Subtotal</td>
                    <td>₹@total.00</td>
                </tr>
                <tr>
                    <td>Tax</td>
                    <td>₹@tax.00</td>
                </tr>
                <tr>
                    <td>Total</td>
                    <td>₹@grandTotal.00</td>
                </tr>
            </table>
        </div>
    }
</div>


